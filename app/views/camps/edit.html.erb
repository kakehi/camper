<div class="view-outer-container single-column">
  
  <%# 
    PROFILE TOP
  %>
  <%= render "components/cards/organization-thumb-card",
    organization: @organization
  %>
  
  <div class="content">
    <%= render "components/titles/page-title",
      title: "Edit camp" %>
    <%= form_with(url: update_camp_path, model: @camp, local: true, method: :post, html: { class: 'form-container' }) do |f| %>

      <% if @camp.errors.any? %>
        <ul>
          <% @camp.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %> </ul>
      <% end %>

      <div class="form-group" id="overview">
        <div class="form-field">
          <%= f.label "Name", class: 'form-label' %>
          <%= f.text_field :name, value: @camp.name, class: 'form-control' %>
        </div>

        <div class="form-field">
          <%= f.label "Description", class: 'form-label' %>
          <%= f.text_area :description, value: @camp.description, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group image-upload">
        <%= f.label "Hero image", class: 'form-label' %>
        <div class="image-preview" id="imagePreview">
          <img src="<%= @camp.hero_image.attached? ? url_for(@camp.hero_image) : "" %>" alt="Image Preview" class="image-preview__image <%= @camp.hero_image.attached? ? "-block" : "" %>">
          <span class="image-preview__default-text <%= @camp.hero_image.attached? ? "-none" : "" %>">No image uploaded</span>
        </div>
        <%= f.file_field :hero_image, class: 'form-control-file', id: 'imageUpload' %>
      </div>

      <%# AGE GROUPS %>
      <%= render "components/forms/age_group", 
        f: f,
        form_target: @camp,
        form_parent: @organization,
        age_group_min: @age_group_min,
        age_group_max: @age_group_max
      %>

      <%# PRICE %>
      <%= render "components/forms/price", 
        f: f,
        form_target: @camp,
        form_parent: @organization,
        base_price: @base_price,
        discount_price: @discount_price
      %>
      
      <div class="button-group">
        <%= link_to 'Delete', destroy_camp_path(@camp), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-danger" %>
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>