<%
    @organization = Organization.find(params[:organization_id])
    @organization_camps = Camp.where(organization_id: params[:organization_id])
%>

<div class="camp-profile-hero-container">
    
    <%# 
        PROFILE TOP
    %>
    <% if defined?@organization %>
        <%= render "components/heroes/organization-hero",
            organization: @organization %>
    <% end %>

    <div class="camp-header-container">

        <% if @organization_camps.count > 1 %>
            <%= render "uis/buttons/button",
                type: "secondary",
                text: "View all camps",
                size: "regular",
                href: index_organization_camp_path(@organization)  %>
        <% end %>
        <%= render "components/heroes/camp-hero",
            camp: @camp %>
            
        <%= render "camps/components/camp_profile_tabs",
            selected: selected
        %>
    </div>
    
</div>