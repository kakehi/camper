<div class="view-outer-container double-column">

    <%# 
        PROFILE TOP
    %>
    <% if defined?@organization %>
        <%= render "components/heroes/organization-hero",
            organization: @organization %>
    <% end %>


    <%# 
        INDEX
    %>
    <div class="section camp">
        <%= render "components/titles/page-title",
            title: "Camps" %>
        <div class="thread-container">
            <% @camps.each do |c| %>
                <div class="thread-card">
                    <%= render "components/cards/camp-hero-card",
                    camp: c %>
                    
                </div>
            <% end %>
            <%= render "uis/buttons/button",
                type: "empty",
                text: "Add camp",
                size: "large",
                href: camp_new_path(@organization, 1) %>
        </div>
    </div>
    

</div>