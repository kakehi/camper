<div class="search-container">
  <%= form_with url: index_organization_path, class: "form", method: :get, local: true do |form| %>
    <input class="input" type="text" name="title" placeholder="Search by name" value="<%= params[:title] %>">
    <%= form.submit "Search", class: "button" %>
  <% end %>
</div>


<div class="view-outer-container organizations-index-container">

    <div class="tabs page-tabs icon">
      <% @tags.each do |t| %>

          <% 
            _selected = @categories.select{|c|
             c.name.downcase == t.name.downcase
            }.count > 0
          %>

          <%= link_to index_organization_path(categories: t.name.downcase), :class => "tab #{t[:id]} #{_selected ? 'selected' : 'unselected'}" do %>
              <% if defined?(t.icon) %>
                  <%= image_tag(t.icon) if t.icon.present? %>
              <% end %>
              <%= t[:name] %>
          <% end %>
      <% end %>
    </div>


    <div class="grid-container">
        <% @organization.each do |organization| %>
            <%= render "components/cards/organization-grid-card",
                organization: organization
            %>
        <% end %>
    </div>

</div>