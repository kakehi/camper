<div class="view-outer-container organizations-index-container">

    <div class="tabs page-tabs icon">
      <% @tags.each do |t| %>

          <% 
            _selected = @categories.select{|c|
             c.name.downcase == t.name.downcase
            }.count > 0
          %>

          <%= link_to index_organization_path(categories: t.name.downcase), :class => "tab #{t[:id]} #{_selected ? 'selected' : 'unselected'}" do %>
              <% if defined?(t.icon) %>
                  <%= image_tag(t.icon) if t.icon.present? %>
              <% end %>
              <%= t[:name] %>
          <% end %>
      <% end %>
    </div>

    <div class="filter-quick-access-container">
      <% if @locations.count > 0 %>
        <span class="subtext">Metros:</span>
        <% @locations.each do |loc| %>
          <%= render "uis/tags/tag",
              type: "selectable",
              selected: true,
              tg: loc,
              size: "small" %>
        <% end %>
      <% end %>

    </div>
    
    
    <div class="grid-container">
        <% @organizations.each do |organization| %>
            <%= render "components/cards/organization-grid-card",
                organization: organization
            %>
        <% end %>
    </div>

</div>