<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto form-container">
      <h2 class="h2">Edit organization</h2>
      <%= form_with(url: update_organization_path, model: @organization, local: true, method: :post, html: { class: 'post-form' }) do |f| %>

        <% if @organization.errors.any? %>
          <ul>
            <% @organization.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %> </ul>
        <% end %>

        <div class="form-group">
          <%= f.label "Name", class: 'form-label' %>
          <%= f.text_field :name, value: @organization.name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "Description", class: 'form-label' %>
          <%= f.text_area :description, value: @organization.description, class: 'form-control' %>
        </div>

        <div class="form-group image-upload">
          <%= f.label "画像", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="<%= @organization.hero_image.attached? ? url_for(@organization.hero_image) : "" %>" alt="Image Preview" class="image-preview__image <%= @organization.hero_image.attached? ? "-block" : "" %>">
            <span class="image-preview__default-text <%= @organization.hero_image.attached? ? "-none" : "" %>">No image uploaded</span>
          </div>
          <%= f.file_field :hero_image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <div class="form-group">
            <h4>Locations</h4>
            <%= f.label "Zip code", class: 'form-label' %>
            <%= f.text_field :zip_code, class: 'form-control' %>
            <%= f.label "Country", class: 'form-label' %>
            <%= f.text_field :country, class: 'form-control' %>
            <%= f.label "State", class: 'form-label' %>
            <%= f.text_field :state, class: 'form-control' %>
            <%= f.label "City", class: 'form-label' %>
            <%= f.text_field :city, class: 'form-control' %>
        </div>
        
        <div class="button-group">
          <%= link_to 'Delete', destroy_organization_path(@organization), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-danger" %>
          <%= f.submit 'Update', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>