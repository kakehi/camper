<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto form-container">
      <h2 class="h2">New organization</h2>
      <%= form_with(url: create_organization_path, model: @organization, local: true, method: :post, html: { class: 'organization-form' }) do |f| %>
        <% if @organization.errors.any? %>
            <ul>
                <% @organization.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>

        <div class="form-group">
          <%= f.label "Name", class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "Description", class: 'form-label' %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group image-upload">
          <%= f.label "Hero image", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="" alt="Image Preview" class="image-preview__image">
            <span class="image-preview__default-text">Image will be displayed here</span>
          </div>
          <%= f.file_field :hero_image, class: 'form-control-file', id: 'imageUpload' %>
        </div>

        <div class="button-group">
          <%= f.submit 'Create', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>