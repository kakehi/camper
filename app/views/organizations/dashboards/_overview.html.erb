


<div>
    <div class="dashboard-tab-header">
        <div class="stats">
            <div class="dashboard-stats-tile">
                <div class="title">Total schedules:</div>
                <h6 class="stat"><%= @schedule_activities.count%></h6>
            </div>
        </div>

        <div class="stats">
            <div class="dashboard-stats-tile">
                <div class="title">Total sessions:</div>
                <h6 class="stat"><%= @activities.count%></h6>
            </div>
        </div>
    </div>

    <div style="max-width: 600px;">
        <h6>Sign up rate by tags</h6>
        <div>
            <% @tags.map do |tag| %>
                <% _tag_activities = tag.activities %>
                
                <div class="dashboard-list-line dashboard-tag">
                    <div class="title">
                        <%= image_tag(tag[:icon]) if tag[:icon].present? %>
                        <%= tag[:name] %>
                    </div>
                    <div class="counts">
                        <div class="count"><%= ScheduleActivity.where(activity_id: _tag_activities).count %> Waitlisted</div>
                        <div class="unit"><%= _tag_activities.count %> session</div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    
</div>