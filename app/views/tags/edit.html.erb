<div class="view-outer-container single-column">
    
    <div class="content">
    
    <%= render "components/titles/page-title",
    title: "Add a tag" %>
    
    <%= form_with(url: update_tag_path, model: @tag, local: true, method: :post, html: { class: 'form-container' }) do |f| %>

        <div class="form-group">
            <div class="form-field">
                <%= f.label "Name", class: 'form-label' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>

        <%# ICON %>
        <%= render "components/forms/image-uploader", 
            f: f,
            title: "Icon",
            target_image: @tag.icon
        %>
        
        <div class="button-group">
            <%= f.submit 'Update', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>