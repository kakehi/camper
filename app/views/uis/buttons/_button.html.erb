<% if defined?(size)
    @size = size
else
    @size = "regular"    
end %>



<% if defined?(href) %>
    <a class="button <%= type %> <%= @size %>" href=<%= href %>>
        <% if defined?(icon) %> 
            <img class="icon" alt=<%= text %> src=<%= icon[:src] %>/>
        <% end %>
        <%= text %>
    </a>
<% else %>
    <span class="button <%= type %> <%= @size %>">
        <% if defined?(icon) %> 
            <img class="icon" alt=<%= text %> src=<%= icon[:src] %>/>
        <% end %>
        <%= text %>
    </span>
<% end %>