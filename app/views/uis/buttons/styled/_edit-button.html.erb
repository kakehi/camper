<% if defined?(size)
    @size = size
else
    @size = "regular"    
end %>


<% if defined?(organization)
    @href = org_edit_path(organization)
    @text = "Edit organization"
elsif defined?(camp)
    @organization = Organization.find_by(id: camp.organization_id)
    @href = camp_edit_path(@organization, camp, 1)
    @text = "Edit camp"  
elsif defined?(activity)
    @camp = Camp.find_by(id: activity.camp_id)
    @organization = Organization.find_by(id: @camp.organization_id)
    @href = activity_edit_path(@organization, @camp, activity, 1)
    @text = "Edit"  
elsif defined?(profile)
    @href = profile_edit_path(profile)
    @text = "Edit profile"  
end %>


<%= render "uis/buttons/text-link",
    text: @text,
    size: @size,
    href: @href,
    icon: {
        src: "/images/icons/pen-black.svg"
    } %>