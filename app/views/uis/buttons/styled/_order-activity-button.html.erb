<% if defined?(size)
    @size = size
else
    @size = "regular"    
end %>


<% if activity.scheduled?(current_user, activity) %>
    <%= form_with url: destroy_schedule_activity_path(activity.id), method: :delete do |form| %>
        <%= form.button style: 'background-color: transparent; border: none;' do %>
            <% if defined?(type) && type == "text" %>
                <%= render "uis/buttons/text-link",
                    text: "Cancel",
                    size: @size,
                    icon: {
                        src: "/images/icons/trash-black.svg"
                    } %>
            <% else %>
                <%= render "uis/buttons/button",
                    text: "Cancel",
                    type: "primary primary-on",
                    size: @size,
                    icon: {
                        src: "/images/icons/trash-white.svg"
                    } %>
            <% end %>
        <% end %>
    <% end %>
<% else %>
    <%= form_with url: create_schedule_activity_path(activity.id), method: :post do |form| %>
        <%= form.button style: 'background-color: transparent; border: none;' do %>
            <% if defined?(type) && type == "text" %>
                <%= render "uis/buttons/text-link",
                    text: "Sign up now",
                    size: @size,
                    icon: {
                        src: "/images/icons/calendar-black.svg"
                    } %>
            <% else %>
                <%= render "uis/buttons/button",
                    text: "Sign up now",
                    type: "primary",
                    size: @size %>
            <% end %>
        <% end %>
    <% end %>
<% end %>