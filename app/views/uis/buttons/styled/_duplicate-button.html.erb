<% if defined?(size)
    @size = size
else
    @size = "regular"    
end %>


<% if defined?(organization)
    @href = edit_organization_path(organization)
    @text = "Duplicate organization"
elsif defined?(camp)
    @organization = Organization.find_by(id: camp.organization_id)
    @href = camp_edit_path(@organization, camp, 1)
    @text = "Duplicate camp"  
elsif defined?(s)
    @href = session_duplicate_path(s)
    @text = "Duplicate" 
end %>


<%= render "uis/buttons/text-link",
    text: @text,
    size: @size,
    href: @href,
    icon: {
        src: "/images/icons/pen-black.svg"
    } %>