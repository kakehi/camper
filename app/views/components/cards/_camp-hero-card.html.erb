
<div class="hero-card camp" >
    <div class="content">
        <% if defined?(camp.hero_image) %>
            <%= render "uis/thumb_images/thumb_image",
                type: "circular",
                size: "large",
                image: camp.hero_image %>
        <% end %>
        <div class="flex-container">
            <div class="overview-container">
                
                <a href="<%= index_camp_activities_path(@organization, camp) %>"><h3 class="title"><%= camp.name %></h3></a>
                
                <% if defined?(camp.subhead) %>
                    <h5><%= camp.subhead %></h5>
                <% end %>
                
                <% if defined?(camp.description) %>
                    <p><%= camp.description %></p>
                <% end %>
                
                <%= camp_get_age_group_from_activities(camp) %>

                <div class="button-group-cotainer">
                    <%= render "uis/buttons/text-link",
                        text: "View camp",
                        size: "medium",
                        href: index_camp_activities_path(@organization, camp) %>
                    <%= render "uis/buttons/text-link",
                        text: "Edit camp",
                        size: "medium",
                        href: edit_camp_path(@organization, camp) %>
                </div>

            </div>
        </div>
    </div>
</div>
