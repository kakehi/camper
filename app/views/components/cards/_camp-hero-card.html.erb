
<div class="hero-card camp <%= camp.hero_image.present? ? 'hero-image' : 'no-image' %>"" >
    <div class="content">
        <% if camp.hero_image.present? %>
            <%= render "uis/thumb_images/thumb_image",
                type: "circular",
                size: "large",
                image: camp.hero_image %>
        <% end %>

        <div class="flex-container">
            <div class="overview-container">
                
                <a href="<%= index_camp_activities_path(@organization, camp) %>"><h3 class="title"><%= camp.name %></h3></a>
                
                <% if defined?(camp.subhead) %>
                    <h6><%= camp.subhead %></h6>
                <% end %>
                
                <% if defined?(camp.description) %>
                    <p><%= camp.description %></p>
                <% end %>
                
                <%= camp_render_age_group_from_activities(camp) %>

                <div class="button-group-container">
                    <%= render "uis/buttons/text-link",
                        text: "View camp",
                        href: index_camp_activities_path(@organization, camp) %>
                    <%= render "uis/buttons/styled/edit-button",
                        camp: camp %>
                </div>

            </div>
        </div>
    </div>
</div>
