<%
    @camp_type = defined?(camp.camp_type) ? camp.camp_type : 0
    @camp_type_class = "camp-type-"+camp.camp_type.to_s
    @hero_image = activity.hero_image.present? ? "hero-image" : "no-image"
%>


<div class="card thread-card activity-thread <%= @camp_type_class %> <%= @hero_image %>">
    <div class="content">
        <div class="header">
            <% if @camp_type != 1 && activity.hero_image.present? %>
                <%= render "uis/thumb_images/thumb_image",
                    type: "circular",
                    size: "medium",
                    image: activity.hero_image %>
            <% end %>
            
            <div class="main-content">
                <% if activity.start_at.present? && activity.end_at.present? %>
    
                    <h4 class="date"><%= activity.start_at.to_formatted_s(:short) %> - <%= activity.end_at.to_formatted_s(:short) %></h4>
                <% end %>

                <% if @camp_type != 1 %>
                    <h4><%= activity.name %></h4>
                    <div class="flex-container">
                        <% activity.tags.each do |tag| %>
                            <%= render "uis/tags/tag",
                                text: tag.name,
                                size: "small" %>
                        <% end %>
                    </div>
                <% end %>
                <div class="description">
                    <%= render "uis/grammar/age-group",
                        size: "medium",
                        age_group_min: activity.age_group_min,
                        age_group_max: activity.age_group_max %>
                </div>

                
            </div>
            
            <div class="header-child text-right">
                <%= render "uis/grammar/price", price: activity.base_price, size: "medium" %>
            </div>

            <div class="header-child text-right">
                <%= render "uis/buttons/styled/schedule-activity-button",
                    type: "cta",
                    activity: activity %>
            </div>

        </div>
        <div class="body">
            <div class="description"><%= activity.description %></div>
            <%= render "uis/buttons/styled/edit-button",
                activity: activity %>
        </div>
       
    </div>
</div>