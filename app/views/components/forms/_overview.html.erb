<div class="form-group">
    <h4>Overview</h4>
    <div class="form-field">
        <%= f.label "Name", class: 'form-label' %>
        <%= f.text_field :name, value: form_target.name, class: 'form-control' %>
    </div>
    <% if defined?(form_target.subhead) %>
        <div class="form-field">
            <%= f.label "Subhead", class: 'form-label' %>
            <%= f.text_area :subhead, value: form_target.subhead, class: 'form-control' %>
        </div>
    <% end %>
    <div class="form-field">
        <%= f.label "Description", class: 'form-label' %>
        <%= f.text_area :description, value: form_target.description, class: 'form-control' %>
    </div>
</div>