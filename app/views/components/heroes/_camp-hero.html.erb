

<a class="post" href="<%= index_camp_activities_path(@organization, camp) %>">
    <div class="header">
        <div class="flex-container">
            <h3 class="title"><%= camp.name %></h3>
            <div>
                <%= render "uis/buttons/text-link",
                    text: "Edit camp",
                    size: "medium",
                    href: edit_camp_path(@organization, camp) %>
            </div>
        </div>
    </div>
    <div class="body">
        <p class="content"><%= camp.description %></p>
    </div>
    <div class="image">
        <%= image_tag(camp.hero_image) if camp.hero_image.attached? %>
    </div>
</a>