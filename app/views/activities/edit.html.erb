<div class="view-outer-container single-column">
  
  <%= render "components/cards/camp-thumb-card",
    organization: @organization,
    camp: @camp
  %>

  <div class="content">
    <%= render "components/titles/page-title",
    title: "Edit activity" %>
    <%= form_with(url: update_activity_path, model: @activity, local: true, method: :post, html: { class: 'form-container' } ) do |f| %>

      <div class="form-group" id="overview">
        <div class="form-field">
          <%= f.label "Name", class: 'form-label' %>
          <%= f.text_field :name, value: @activity.name, class: 'form-control' %>
        </div>

        <div class="form-field">
          <%= f.label "Description", class: 'form-label' %>
          <%= f.text_area :description, value: @activity.description, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group image-upload">
        <%= f.label "Hero image", class: 'form-label' %>
        <div class="image-preview" id="imagePreview">
          <img src="<%= @activity.hero_image.attached? ? url_for(@activity.hero_image) : "" %>" alt="Image Preview" class="image-preview__image <%= @activity.hero_image.attached? ? "-block" : "" %>">
          <span class="image-preview__default-text">Image will be displayed here</span>
        </div>
        <%= f.file_field :hero_image, class: 'form-control-file', id: 'imageUpload' %>
      </div>

      <div class="form-group">
          <h4>Age groups</h4>
          <div class="form-field">
            <%= f.label "Minimum age group (Please select this only, if the target age group is one)", class: 'form-label' %>
            <%= f.text_field :age_group_min, class: 'form-control' %>
          </div>
          <div class="form-field">
            <%= f.label "Max age group (optional)", class: 'form-label' %>
            <%= f.text_field :age_group_max, class: 'form-control' %>
          </div>
      </div>

      <div class="form-group">
          <h4>Dates</h4>
          <div class="form-dates-group">
            <h6>Starting from</h6>
            <div class="flex-container">
              <div class="form-field">
                <%= f.label "Year", class: 'form-label' %>
                <%= f.text_field :start_year, class: 'form-control' %>
              </div>
              <div class="form-field">
                <%= f.label "Month", class: 'form-label' %>
                <%= f.text_field :start_month, class: 'form-control' %>
              </div>
              <div class="form-field">
                <%= f.label "Date", class: 'form-label' %>
                <%= f.text_field :start_date, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-dates-group">
            <h6>Ending at</h6>
            <div class="flex-container">
              <div class="form-field">
                <%= f.label "Year", class: 'form-label' %>
                <%= f.text_field :end_year, class: 'form-control' %>
              </div>
              <div class="form-field">
                <%= f.label "Month", class: 'form-label' %>
                <%= f.text_field :end_month, class: 'form-control' %>
              </div>
              <div class="form-field">
                <%= f.label "Date", class: 'form-label' %>
                <%= f.text_field :end_date, class: 'form-control' %>
              </div>
            </div>
          </div>
      </div>

      <div class="button-group">
        <%= link_to 'Delete', destroy_activity_path(@organization.id, @camp.id, @activity.id), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-danger" %>
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>
